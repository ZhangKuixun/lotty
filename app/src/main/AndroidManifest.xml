<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.lotty">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

  <uses-feature
      android:glEsVersion="0x00020000"
      android:required="true" />

  <application
      android:name=".App"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <!-- Animation容器 -->
    <activity android:name=".AnimationActivity">
      <intent-filter>
        <action android:name="com.github.lotty.action.NAVIGATION" />

        <category android:name="android.intent.category.DEFAULT" />

        <data
            android:host="nav.github.com"
            android:path="/lotty/animation"
            android:scheme="https" />
      </intent-filter>
    </activity>
    <!-- Drawable容器 -->
    <activity android:name=".DrawableActivity">
      <intent-filter>
        <action android:name="com.github.lotty.action.NAVIGATION" />

        <category android:name="android.intent.category.DEFAULT" />

        <data
            android:host="nav.github.com"
            android:path="/lotty/drawable"
            android:scheme="https" />
      </intent-filter>
    </activity> <!-- 组件容器 -->
    <activity android:name=".ComponentActivity">
      <intent-filter>
        <action android:name="com.github.lotty.action.NAVIGATION" />

        <category android:name="android.intent.category.DEFAULT" />

        <data
            android:host="nav.github.com"
            android:path="/lotty/component"
            android:scheme="https" />
      </intent-filter>
    </activity> <!-- HOOK容器 -->
    <activity android:name=".HookActivity">
      <intent-filter>
        <action android:name="com.github.lotty.action.NAVIGATION" />

        <category android:name="android.intent.category.DEFAULT" />

        <data
            android:host="nav.github.com"
            android:path="/lotty/hook"
            android:scheme="https" />
      </intent-filter>
    </activity> <!-- 图片 -->
    <activity android:name=".ImageActivity">
      <intent-filter>
        <action android:name="com.github.lotty.action.NAVIGATION" />

        <category android:name="android.intent.category.DEFAULT" />

        <data
            android:host="nav.github.com"
            android:path="/lotty/image"
            android:scheme="https" />
      </intent-filter>
    </activity> <!-- 事件 -->
    <activity android:name=".DispatchActivity">
      <intent-filter>
        <action android:name="com.github.lotty.action.NAVIGATION" />

        <category android:name="android.intent.category.DEFAULT" />

        <data
            android:host="nav.github.com"
            android:path="/lotty/dispatch"
            android:scheme="https" />
      </intent-filter>
    </activity> <!-- 刷新 -->
    <activity android:name=".SwipeActivity">
      <intent-filter>
        <action android:name="com.github.lotty.action.NAVIGATION" />

        <category android:name="android.intent.category.DEFAULT" />

        <data
            android:host="nav.github.com"
            android:path="/lotty/swipe"
            android:scheme="https" />
      </intent-filter>
    </activity> <!-- 主页面 -->
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>